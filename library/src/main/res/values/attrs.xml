<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="ActionProcessButton" tools:ignore="ResourceName">
        <attr name="ev_pb_mode">
            <!--google风格 一直加载-->
            <enum name="endLess" value="0" />
            <enum name="progress" value="1" />
        </attr>
        <attr name="ev_pb_indicatorHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ProcessButton" tools:ignore="ResourceName">
        <attr name="ev_pb_textProgress" format="string" />
        <attr name="ev_pb_textComplete" format="string" />
        <attr name="ev_pb_textError" format="string" />
        <attr name="ev_pb_colorProgress" format="color" />
        <attr name="ev_pb_colorComplete" format="color" />
        <attr name="ev_pb_colorError" format="color" />
        <attr name="ev_pb_disableWhenProgress" format="boolean" />
        <attr name="ev_pb_maskWhenProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FlatButton" tools:ignore="ResourceName">
        <attr name="ev_pb_colorNormal" format="color" />
        <attr name="ev_pb_colorPressed" format="color" />
        <attr name="ev_pb_colorDisable" format="color" />
        <attr name="ev_pb_colorStroke" format="color" />
        <attr name="ev_pb_strokeWidth" format="dimension" />
        <attr name="ev_pb_cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DividerView" tools:ignore="ResourceName">
        <attr name="ev_position">
            <flag name="none" value="0x00" />
            <flag name="top" value="0x1" />
            <flag name="bottom" value="0x2" />
        </attr>
        <attr name="ev_topHeight" format="dimension" />
        <attr name="ev_topColor" format="color" />
        <attr name="ev_topToLeft" format="dimension" />
        <attr name="ev_topToRight" format="dimension" />
        <attr name="ev_bottomHeight" format="dimension" />
        <attr name="ev_bottomColor" format="color" />
        <attr name="ev_bottomToLeft" format="dimension" />
        <attr name="ev_bottomToRight" format="dimension" />
    </declare-styleable>
    <!--end-->
    <declare-styleable name="DividerContainer" tools:ignore="ResourceName">
        <attr name="ev_position" />
        <attr name="ev_topHeight" />
        <attr name="ev_topColor" />
        <attr name="ev_topToLeft" />
        <attr name="ev_topToRight" />
        <attr name="ev_bottomHeight" />
        <attr name="ev_bottomColor" />
        <attr name="ev_bottomToLeft" />
        <attr name="ev_bottomToRight" />
    </declare-styleable>
    <!--end-->
    <declare-styleable name="DividerLayout" tools:ignore="ResourceName">
        <attr name="ev_position" />
        <attr name="ev_topHeight" />
        <attr name="ev_topColor" />
        <attr name="ev_topToLeft" />
        <attr name="ev_topToRight" />
        <attr name="ev_bottomHeight" />
        <attr name="ev_bottomColor" />
        <attr name="ev_bottomToLeft" />
        <attr name="ev_bottomToRight" />
    </declare-styleable>
    <declare-styleable name="DividerTextView" tools:ignore="ResourceName">
        <attr name="ev_position" />
        <attr name="ev_topHeight" />
        <attr name="ev_topColor" />
        <attr name="ev_topToLeft" />
        <attr name="ev_topToRight" />
        <attr name="ev_bottomHeight" />
        <attr name="ev_bottomColor" />
        <attr name="ev_bottomToLeft" />
        <attr name="ev_bottomToRight" />
    </declare-styleable>
</resources>
