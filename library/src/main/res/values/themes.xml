<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme.基础主题. -->
    <style name="ev_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ev_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ev_colorPrimaryDark</item>
        <item name="colorAccent">@color/ev_colorAccent</item>
        <item name="android:windowBackground">@color/ev_bgColor</item>
    </style>

    <style name="ev_ToolbarStyle">
        <item name="android:id">@id/ev_id_toolBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ev_toolbar_height</item>
        <item name="android:minHeight">@dimen/ev_toolbar_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/ev_normalSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ev_ToolbarTheme</item>
        <item name="navigationIcon">@drawable/ev_nav_back_arrow</item>
        <item name="navigationContentDescription">Navigation</item>
    </style>

    <style name="ev_ToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/ev_white</item>
        <item name="android:textSize">@dimen/ev_normalSize</item>
    </style>
</resources>