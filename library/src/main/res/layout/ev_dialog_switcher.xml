<?xml version="1.0" encoding="utf-8"?>
<com.xcheng.view.round.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/ev_id_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="400dp"
    android:orientation="vertical"
    android:padding="20dp"
    app:ev_fillColor="@color/ev_white"
    app:ev_radius="10dp">

    <TextView
        android:id="@id/ev_id_titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ev_text_black"
        android:textSize="26sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@id/ev_id_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/ev_white"
        android:textSize="@dimen/ev_titleSize" />

    <com.xcheng.view.round.RoundButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@color/ev_white"
        android:textSize="20sp"
        app:ev_fillColor="@color/ev_blue_normal"
        app:ev_radius="5dp" />
</com.xcheng.view.round.RoundLinearLayout>