<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    android:orientation="vertical">

    <com.xcheng.view.widget.PagerSlidingTabStrip
        app:ev_pstsDividerColor="@color/ev_transparent"
        android:background="@color/ev_transparent"
        android:id="@id/ev_id_tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ev_pstsShouldExpand="true"
        app:ev_pstsSmoothScroll="true"
        android:layout_gravity="center" />

    <android.support.v4.view.ViewPager
        android:id="@id/ev_id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>